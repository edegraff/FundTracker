        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThresholdValue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Days)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AutoReset)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsEnabled)
        </td>
