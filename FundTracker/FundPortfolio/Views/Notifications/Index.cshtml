@model IEnumerable<Common.Models.Notification>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Notification List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <td>
            @Html.DisplayNameFor(model => model.FundEntity.Name)
        </td>
        <td>
            @Html.DisplayNameFor(model => model.FundEntity.CurrentValue)
        </td>
        <th>
            @Html.DisplayNameFor(model => model.ThresholdValue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Days)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AutoReset)
        </th>
        <th>
