@model FundPortfolio.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<h1 class="page-header">Create a new account</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="Register" style="margin-bottom: 30px;"/>
    </fieldset>
}

<br>
<h1 class="page-header">Use another service to create an account.</h1>
@Html.Action("ExternalLoginsList")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
